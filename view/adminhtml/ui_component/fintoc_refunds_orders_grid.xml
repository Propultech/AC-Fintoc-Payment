<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider"
                  xsi:type="string">fintoc_refunds_orders_grid.fintoc_refunds_orders_grid_data_source</item>
            <item name="deps"
                  xsi:type="string">fintoc_refunds_orders_grid.fintoc_refunds_orders_grid_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">fintoc_refunds_orders_columns</item>
    </argument>

    <dataSource name="fintoc_refunds_orders_grid_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class"
                      xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">fintoc_refunds_orders_grid_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                    <item name="filterUrlParams" xsi:type="array">
                        <item name="method" xsi:type="string">fintoc_payment</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="fintoc_refunds_orders_columns">
        <column name="parent_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Order ID</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sorting" xsi:type="string">desc</item>
                </item>
            </argument>
        </column>

        <column name="order_increment_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Order #</item>
                    <item name="filter" xsi:type="string">text</item>
                </item>
            </argument>
        </column>

        <column name="order_created_at">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Created At</item>
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="sorting" xsi:type="string">desc</item>
                </item>
            </argument>
        </column>

        <column name="order_payment_status" component="Magento_Ui/js/grid/columns/select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Payment Status</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="options" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Paid</item>
                            <item name="value" xsi:type="string">Paid</item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Refund requested</item>
                            <item name="value" xsi:type="string">Refund requested</item>
                        </item>
                        <item name="2" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Refunded</item>
                            <item name="value" xsi:type="string">Refunded</item>
                        </item>
                    </item>
                </item>
            </argument>
        </column>

        <actionsColumn name="actions" class="Fintoc\Payment\Ui\Component\Listing\Column\RefundActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">parent_id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>

</listing>
