            <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
            <config_path>payment/fintoc_payment/refunds_status_failed</config_path>
        </field>
        <field id="status_canceled" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
