            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/fintoc_payment/refunds_auto_creditmemo</config_path>
        </field>
        <field id="status_pending" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
