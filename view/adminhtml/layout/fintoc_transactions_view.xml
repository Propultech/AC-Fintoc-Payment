<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left">
            <block class="Fintoc\Payment\Block\Adminhtml\Transactions\View\Tabs"
                   name="fintoc.payment.transactions.view.tabs">
                <block class="Fintoc\Payment\Block\Adminhtml\Transactions\View\Tab\Information"
                       name="fintoc.payment.transactions.view.tab.information"
                       template="Fintoc_Payment::transactions/tab/information.phtml"/>
                <block class="Fintoc\Payment\Block\Adminhtml\Transactions\View\Tab\WebhookHistory"
                       name="fintoc.payment.transactions.view.tab.webhook"
                       template="Fintoc_Payment::transactions/tab/webhook_history.phtml"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">information</argument>
                    <argument name="block" xsi:type="string">fintoc.payment.transactions.view.tab.information</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">webhook_history</argument>
                    <argument name="block" xsi:type="string">fintoc.payment.transactions.view.tab.webhook</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Fintoc\Payment\Block\Adminhtml\Transactions\View"
                   name="fintoc.payment.transactions.view">
                <block class="Magento\Backend\Block\Template"
                       name="fintoc.payment.transactions.view.edit.form"
                       as="form"
                       template="Fintoc_Payment::transactions/edit/form.phtml">
                </block>
            </block>
        </referenceContainer>

    </body>
</page>
