<script>
    require(['jquery'], function ($) {
        var allowPartial = <?= $allowPartial ? 'true' : 'false' ?>;
        var maxAmount = <?= json_encode((float)$refundable) ?>;

        function updateMode() {
            var mode = $('input[name="mode"]:checked').val();
            if (mode === 'amount' && allowPartial) {
                $('#refund-amount').show();
                $('#refund-amount-currency').show();
                $('#amount-note').show();
                $('#items-section').hide();
            } else if (mode === 'items' && allowPartial) {
                $('#refund-amount').hide();
                $('#refund-amount-currency').hide();
                $('#amount-note').hide();
                $('#items-section').show();
            } else {
                $('#refund-amount').hide();
                $('#refund-amount-currency').hide();
                $('#amount-note').hide();
                $('#items-section').hide();
            }
        }

        $(document).on('change', 'input[name="mode"]', updateMode);
        $('#refund-amount').on('input', function () {
            var v = parseFloat(this.value || '0');
            if (v > maxAmount) this.value = maxAmount.toFixed(2);
            if (v < 0) this.value = '';
        });
        $('#fintoc-refund-form').on('submit', function (e) {
            var mode = $('input[name="mode"]:checked').val();
            if (mode === 'amount') {
                if (!allowPartial) {
                    e.preventDefault();
                    alert('<?= $escaper->escapeJs(__('Partial refunds are disabled.')) ?>');
                    return false;
                }
                var v = parseFloat($('#refund-amount').val() || '0');
                if (!(v > 0) || v > maxAmount + 0.0001) {
                    e.preventDefault();
                    alert('<?= $escaper->escapeJs(__('Please enter a valid amount greater than 0 and up to %1', number_format((float)$refundable, 2))) ?>');
                    return false;
                }
            } else if (mode === 'items') {
                if (!allowPartial) {
                    e.preventDefault();
                    alert('<?= $escaper->escapeJs(__('Partial refunds are disabled.')) ?>');
                    return false;
                }
                var any = false;
                $('input[name^="qty["]').each(function () {
                    var q = parseFloat($(this).val() || '0');
                    if (q > 0) any = true;
                });
                if (!any) {
                    e.preventDefault();
                    alert('<?= $escaper->escapeJs(__('Please enter at least one quantity to refund.')) ?>');
                    return false;
                }
            }
        });
        updateMode();
    });
</script>
